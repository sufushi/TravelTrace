<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PersonCenterDrawableTextStyle"
            android:text="@string/string_person_video_list"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_more"
            android:textSize="@dimen/dimen_text_size_small"
            android:textColor="@color/gray"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/bg_empty_video"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:text="@string/string_video_list_empty_tips"
            android:textSize="@dimen/dimen_text_size_small"
            android:textColor="@color/empty_album_tips_color"
            android:gravity="center"
            android:layout_marginBottom="6dp"/>

    </FrameLayout>

</merge>
